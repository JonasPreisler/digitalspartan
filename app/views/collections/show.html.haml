.community_sidebar
  .community_sidebar2
  = link_to "Back to collections", collections_path
  = image_tag @collection.image.url(:small)
.community
  .community_cover
    = image_tag @collection.image.url(:cover)
    .community_name
      %h1= @collection.name
  #communities
    - @post.each do |post|
      .community2
        .community_image
          = link_to (image_tag post.image.url(:medium)), post
        .community_content
          .title
            %h2= link_to post.title, post